<h1>
	<%= @article.title %>
</h1>
<% unless @article.user.nil? %>
	<p>
		Escrito por: <%= @article.user.email %>
	</p>
<%end%>
<p>
	Visitas: <%= @article.visits_count %>
</p>
<div class="field">
	<%= @article.body %>
</div>
<div class="field">
	<h3>
		Comentarios
	</h3>
	<%= render "comments/form" %>
	<ul>
		<% @article.comments.each do |comment| %>
			<li>
				<%= comment.body %> - <%= comment.user.email %>
			</li>
		<%end%>
	</ul>
</div>
