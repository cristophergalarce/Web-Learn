// stylus -u nib -w stylus/nuevosEstilos.styl -o css/nuevosEstilos.css

@import "nib"
/* importante importar nib para mixins y más */
@import "normalize.styl"
/* nib ya trae normalize */
@import "fonts.styl"
/* el .css que entrega iconmoon/google fonts se guarda con .styl y listo */

// Variables
amarillo = #FFD400


img
	vertical-align top //quita ese espacio baseline
	
.class
	bottom 0
	// fuerza la caja a colocarse abajo
	left 0
	// fuerza la caja a la izq
	position absolute
	// entrega parametros top, left, right, bottom
	right 0
	// junto a left fuerzan la caja al 100% de su padre
	margin 0 auto
	// funciona solo si se declara un width
	line-height 3.5em
	// centra el texto y corresponde a su contenedor cuando sea solo una linea
	float left
	// elementos quedan flotando. arreglar el padre con overflow hidden. esto respeta la caja.
	margin-left .6em
	// nace y se apega a la izquierda. es mejor con margen.
	right .5em
	// a diferencia del margen. es mejor para forzar a colocarse desde la derecha
	width auto
	// mejor práctica
	height auto
	// tanto none auto es porque se hacen las cosas bien
	text-transform uppercase
	// lleva el texto todo a mayuscula, es solo visual
	&:after // asi se hacen los triangulos
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid gris-claro // no se coloca el bottom
			content "" // obligatorio aunque esté vacío
			display inline-block // lo coloca hacia el lado. como texto
			margin-left .4em // lo separa de lo que esté a su izquierda
.clase
	transition tiempo propiedad-afectada
	&:hover
		propiedad valor
	// transition funciona cuando hay un cambio de estado.
	
.class
	margin-top -6px
	// posiciona mejor el elemento
	display inline-block
	// propiedad de texto
	&:nth-child(even)
	// elementos anidados
	p
	// siempre es mejor configurar lo más común entre elementos y así se ahorra código
	animation 10s progreso infinite linear, 1s parpadeo infinite linear
	animation 1s circulo infinite linear
// asi se configuran animaciones en stylus junto a nib
@keyframes progreso
	0%
		width 0%
	100%
		width 100%
@keyframes parpadeo
	0%
		background red
	100%
		background amarillo
@keyframes circulo
	0%
		transform scale(1)
	50%
		transform scale(3)
	100%
		transform scale(2)
		opacity 0

// asi se configurar los placeholder
placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}
.input
	+placeholder()
			color gris_texto
			font-style italic
	outline 0
	// quita el efecto de autofocus de los input

.class
	box-sizing border-box
	// ajusta todo lo que pueda tener una caja al tamaño declarado en width y height

/*max-width
sirve para mostly fluid. declara un ancho maximo fijo y respeta la buena presentacion en viewports mas pequeños

** off canvas **

la caja que va fuera tiene
position absolute
y tamaño definido
se le resta su tamaño para quitarlo del canvas
Canvas contenedor debe ocultar todo lo que se salga con
overflow hidden
y hacer flotar los canvas absolutos en el Canvas contenedor con
posicion relativa
con transition se anima la aparicion del absolute de su estado 1 al estado 2 con subclase (oocss)
Para darle acción se hace en javascript

anchor tiene display inline
es cliqueable solo su texto
al tener display block
se hace cliqueable toda su caja
y con inline-block se colocan uno al lado del otro

*/

// asi animo una imagen de fondo dejando al img del html intacta
.logo
	height 273px
	margin 1em auto 0 auto
	width 273px
	overflow hidden
	position relative
	transition .5s
	&:before
		animation 20s rotacion infinite linear
		background url(../img/universo_logo.png) no-repeat center center/100% auto
		box-sizing border-box
		content '' 
		// content siempre va con pseudo elementos before, after etc
		position absolute
		width 100%
		height 100%
		left 0
		z-index -1
	img // solo indico la posicion del img
		width 42px
		margin 42% 0
@keyframes rotacion
	100%
		transform rotate(360deg)