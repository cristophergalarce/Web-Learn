<div style="width: 80%; margin: 0 auto;">
	<h1 class="margin-bottom">Crear un artículo</h1>
	<% @article.errors.full_messages.each do |message| %>
		<div class="be-red white top-space">
			<%= message %>
		</div>
	<%end%>
	<%= form_for(@article) do |f| %>
		<div class="field">
			<%= f.text_field :title, placeholder: "Título", class:"form-control" %>	
		</div>
		<div class="field">
			<%= f.text_area :body, placeholder: "Escribe aquí el artículo", style:"height:250px", class:"form-control" %>
		</div>
		<div class="field">
			<%= f.submit "Guardar", class:"btn" %>
		</div>
	<%end%>
</div>